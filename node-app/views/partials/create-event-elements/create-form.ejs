          </select>
        </div>
      </div>

      <!-- Right Column -->
      <div class="flex flex-col gap-4">
        <!-- Date Range -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-cyan-400 mb-2">Start Date</label>
            <input type="date" name="Start-Date"
              class="w-full bg-gray-700 bg-opacity-50 p-4 rounded-lg focus:ring-2 focus:ring-cyan-400 border border-gray-600 text-white">
          </div>
          <div>
            <label class="block text-sm font-medium text-cyan-400 mb-2">End Date</label>
            <input type="date" name="End-Date"
              class="w-full bg-gray-700 bg-opacity-50 p-4 rounded-lg focus:ring-2 focus:ring-purple-400 border border-gray-600 text-white">
          </div>
        </div>

        <!-- Province Location -->
        <div>
          <label class="block text-sm font-medium text-cyan-400 mb-2">Location of Province</label>
          <select name="Location-Of-Province"
