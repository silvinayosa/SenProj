          <input type="number" name="Budget" placeholder="Enter your budget"
            class="w-full bg-gray-700 bg-opacity-50 p-4 rounded-lg focus:ring-2 focus:ring-purple-400 border border-gray-600 text-white">
        </div>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="text-center mt-6">
      <button type="submit"
