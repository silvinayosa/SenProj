        <!-- Type of Event -->
        <div>
          <label class="block text-sm font-medium text-cyan-400 mb-2">Type of Event</label>
          <select name="Type-of-Event"
            class="w-full bg-gray-700 bg-opacity-50 p-4 rounded-lg focus:ring-2 focus:ring-purple-400 border border-gray-600 text-white">
            <option value="" disabled selected>Select an event type</option>
            <option value="Corporate Events">Corporate Events</option>
            <option value="Convention">Convention</option>
            <option value="Fundraisers">Fundraisers</option>
            <option value="Parties">Parties</option>
