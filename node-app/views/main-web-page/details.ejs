<!DOCTYPE html>

<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://cdn.jsdelivr.net/npm/tsparticles@2/tsparticles.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>

    <script src="https://cdn.tailwindcss.com"></script>
    <style src="/css/output.css"></style>
    <meta charset="utf-8" />

    <title>Green Horizon</title>

    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Poppins:wght@400;600;700&family=Roboto+Mono:wght@400;600&display=swap"
        rel="stylesheet">

    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin="anonymous" />
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js" type="text/javascript"></script>
</head>


<body>

    <div id="venue-container"
        class="relative grid grid-cols-2 row-span-3 gap-4 max-w-4xl mx-auto bg-white rounded-xl shadow-lg m-4 p-3 border">

        <!-- Import details-venues-->
        <%- include('../main-web-page/details-venues') %>

 
    </div>

    <script>

        function bookVenue() {
            fetch(`/book-venue`)
                .then(response => response.text())
                .then(html => {
                    document.getElementById('venue-container').innerHTML = html;
                })
                .catch(error => console.error('Error loading venue:', error));
        }

        function goBack() {
            fetch('/details-venues')
                .then(response => response.text())
                .then(html => {
                    document.getElementById('venue-container').innerHTML = html;
                })
                .catch(error => console.error('Error returning to main page:', error));
        }
    </script>

</body>

</html>